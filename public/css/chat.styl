@import 'nib'

$borderColor = grey

#chat
  border 1px solid $borderColor
  width 300px
  border-radius 5px
  ul
    list-style none
    margin 0
    padding 4px
    height 300px
    li
      strong
        margin-right 2px
      span
        font-style italic
  form
    margin 5px
    border-top 2px solid darken($borderColor, 25)
    input
      border 1px solid lighten($borderColor, 25)
      width 235px
      